<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleRecorridoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imagenDetalleId"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/entrenar_fondo"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="20dp"
        android:textSize="20dp"
        android:textColor="@color/redG"
        android:text="Detalles de mi entrenamiento"/>
    <TextView
        android:id="@+id/modoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"

        android:text="Modo"/>
    <TextView
        android:id="@+id/fechaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"

        android:text="Fecha"/>
    <TextView
        android:id="@+id/distanciaId"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"

        android:text="Distancia"/>
    <TextView
        android:id="@+id/tiempoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="25dp"
        android:text="Tiempo"/>

</LinearLayout>
